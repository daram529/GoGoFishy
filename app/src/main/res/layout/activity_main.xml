<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs496.gogofishy.MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rose"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fishSaying"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/chat"
        android:layout_width="250dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:hint="장미에게 말을 걸어 주세요"
        android:backgroundTint="#ffffff"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/chatButton"
        android:background="@drawable/chat_1"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_alignBaseline="@+id/chat"
        android:layout_alignBottom="@+id/chat"
        android:layout_toEndOf="@+id/chat"/>

    <Button
        android:id="@+id/temp"
        android:background="@drawable/record"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_alignBaseline="@+id/chat"
        android:layout_alignBottom="@+id/chat"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/roseButton"
        android:background="@null"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/chat"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
